<div class="write">
  <a href="/">&laquo; Home</a>
  <h1>Create a new page</h1>

  <form class="new_wiki" method="post" action="/create/{{name}}">
    <label>
      Title<br />
      <input class="text" type="text" name="page" value="{{name}}" />
    </label>
    <label>
      Body
      <textarea name="content"></textarea>
    </label>
    <div class="actions">
      <input type="submit" value="Create page" />
    </div>
  </form>
</div>